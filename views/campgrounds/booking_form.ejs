<%- include('../partials/header') %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Please enter your details</h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/campgrounds/<%= campground._id %>/booknow" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">	
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="phone" placeholder="Phone Number">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="address" placeholder="Address">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="email" placeholder="Email">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block"type="text" type="submit">Confirm Booking</button>
				</div>
				
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	
	</div>
</div>

<%- include('../partials/footer') %>